<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Tugma bosilganda -->
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#5A89C6"
                android:endColor="#3A6E9E"/>
            <stroke android:width="3dp" android:color="#2A4E7E"/>
        </shape>
    </item>

    <!-- Oddiy holatda -->
    <item>
        <shape>
            <corners android:radius="12dp"/>
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#B0D4F1"
                android:endColor="#88B5E0"/>
            <stroke android:width="3dp" android:color="#A0C6EF"/>
        </shape>
    </item>

</selector>
