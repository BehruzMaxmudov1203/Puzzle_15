<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Yumaloq burchaklar -->
    <corners android:radius="16dp"/>

    <!-- Gradient bilan chiroyli fon -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#4978ED"
        android:endColor="#43425B"/>

    <!-- Chegara bilan ajratish -->
    <stroke android:width="5dp" android:color="#42A5F5"/>

    <!-- Ichki padding -->
    <padding android:left="6dp" android:right="6dp" android:top="6dp" android:bottom="6dp"/>
</shape>
